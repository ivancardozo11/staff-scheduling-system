{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [ "./src/**/*", "tests/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "files": [
    "index.ts"
  ]
}
